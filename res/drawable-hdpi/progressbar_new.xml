<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">

        <shape>
            <!-- 圆角 -->
            <corners android:radius="40dip" />
            <!-- 实心 -->
            <!--<solid android:color="#001c3e61"/>-->
            <solid android:color="#00ffffff"/>
            <!-- 描边 -->
            <!--<stroke
                android:width="1dp"
                android:color="#66baff" />-->

        </shape>

    </item>

    <item android:id="@android:id/secondaryProgress">

        <clip android:clipOrientation="horizontal" android:gravity="right">
            <shape>
                <corners android:radius="40dip" />
                <!--<solid android:color="#cc1c3e61"/>-->
                <solid android:color="#aabbbbbb"/>

            </shape>
        </clip>

    </item>

    <item android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="40dip" />

                <!--<gradient
                    android:angle="0"
                    android:startColor="#dd0080ff"
                    android:endColor="#ddb2dfff"
                    />-->
                <gradient
                    android:angle="0"
                    android:startColor="#bbeaa824"
                    android:endColor="#bbfae6ba"
                    />

            </shape>
        </clip>
    </item>

</layer-list>