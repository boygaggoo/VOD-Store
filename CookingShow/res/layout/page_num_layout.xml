<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/page_num_layout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/page_num_layout_margin_height"
    >

    <TextView
        android:id="@+id/cur_page_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/page_num_text_size"
        android:textColor="#999999"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/page_separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cur_page_num"
        android:layout_marginLeft="1dp"
        android:text="@string/page_separator"
        android:textColor="#999999"
        android:textSize="@dimen/page_num_text_size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/page_num_layout_margin_bottom"
        />

    <TextView
        android:id="@+id/sum_page_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/page_separator"
        android:layout_marginLeft="1dp"
        android:textColor="#999999"
        android:textSize="@dimen/page_num_text_size"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/page_num_layout_margin_bottom"
        />

</RelativeLayout>