<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <com.cookingshow.view.RoundedImageView
        android:id="@+id/app_icon"
        android:layout_width="@dimen/user_app_item_img_layout_margin_width"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:scaleType="fitXY"
        app:riv_corner_radius="@dimen/ad_item_riv_corner_radius"
        app:riv_oval="false"/>

    <TextView
        android:id="@+id/app_name"
        android:layout_width="@dimen/user_app_item_layout_margin_width"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:layout_marginTop="@dimen/user_app_item_layout_margin_top"
        android:layout_marginLeft="@dimen/user_app_item_layout_margin_left"
        android:duplicateParentState="true"
        android:ellipsize="marquee"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:singleLine="true"
        android:textColor="#ffcc66"
        android:textSize="@dimen/user_app_item_text_size"/>

    <TextView
        android:id="@+id/app_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_alignLeft="@id/app_name"
        android:layout_marginTop="@dimen/user_app_item_layout_margin_top2"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:singleLine="true"
        android:textColor="@color/tv_btn_text_selector"
        android:textSize="@dimen/user_app_item_text_size2"/>

    <TextView
        android:id="@+id/app_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_like"
        android:layout_alignLeft="@id/app_name"
        android:layout_marginTop="@dimen/user_app_item_layout_margin_top3"
        android:duplicateParentState="true"
        android:ellipsize="end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:singleLine="true"
        android:textColor="@color/tv_btn_text_selector"
        android:textSize="@dimen/user_app_item_text_size2"/>

    <ImageView
        android:id="@+id/flag_choice"
        android:layout_width="@dimen/user_app_item_img_flag_layout_margin_width"
        android:layout_height="@dimen/user_app_item_img_flag_layout_margin_height"
        android:src="@drawable/icon_choiced"
        android:visibility="gone" />

</merge>